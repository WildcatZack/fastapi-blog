# Environment
APP_ENV=development
APP_NAME=FastAPI Blog

# Feature flags
ENABLE_DEMO_BANNER=false
ENABLE_EXPERIMENTAL_UI=false

# Security
ENABLE_HSTS=false

# Readiness probe (ms)
READINESS_DB_TIMEOUT_MS=300

# DB (optional; do NOT commit real secrets)
# DATABASE_URL=postgresql+asyncpg://user:pass@postgres:5432/dbname
# DATABASE_URL=sqlite+aiosqlite:///./app.db

# Ports for docker compose
# PORT=8081
# HOST_PORT=18000

# ---- CORS (disabled by default) ----
# Examples:
# CORS_ALLOW_ORIGINS=http://localhost:5173
# CORS_ALLOW_ORIGINS=http://localhost:5173,https://example.com
# CORS_ALLOW_ORIGINS=*
# If you set CORS_ALLOW_CREDENTIALS=true, DO NOT use "*"; list explicit origins instead.
# CORS_ALLOW_CREDENTIALS=false
# CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
# CORS_ALLOW_HEADERS=Authorization,Content-Type
